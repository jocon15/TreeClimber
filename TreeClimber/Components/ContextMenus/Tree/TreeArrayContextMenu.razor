@*Context menu for arrays*@
<ContextMenu Id="JArrayContextMenu">
	<Item Enabled="false">Array Tools</Item>
	<Seperator />
	<Item OnClick=@Add><PencilIcon /> Add</Item>
	<Item OnClick=@Copy><ClipboardIcon /> Copy</Item>
	<Item OnClick=@ShowPath><InfoIcon /> Show Path</Item>
	<Item OnClick=@Rename><CursorIcon /> Rename</Item>
	<Item OnClick=@Delete><TrashIcon /> Delete One</Item>
	<Item OnClick=@DeleteAll><TrashIcon /> Delete All</Item>
</ContextMenu>

@code {
	[Parameter]
	public EventCallback<ItemClickEventArgs> Add { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> Copy { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> ShowPath { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> Rename { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> Delete { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> DeleteAll { get; set; }
}