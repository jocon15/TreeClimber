@inject CurrentUser currentUser

@*Context menu for objects*@
<ContextMenu Id="JObjectContextMenu">
	<Item Enabled="false">Object Tools</Item>
	<Seperator />
	@if (IsReadOnly == true)
	{
		// guest only has access to copy
		// user viewing a record from the form table only has access to copy
		<Item OnClick=@Copy><ClipboardIcon /> Copy</Item>
	}
	else
	{
		<Item OnClick=@Add><PencilIcon /> Add</Item>
		<Item OnClick=@Copy><ClipboardIcon /> Copy</Item>
		<Item OnClick=@Rename><CursorIcon /> Rename</Item>
		<Item OnClick=@Delete><TrashIcon /> Delete</Item>
	}
</ContextMenu>

@code {
	[Parameter]
	public bool IsReadOnly { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> Add { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> Copy { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> Rename { get; set; }

	[Parameter]
	public EventCallback<ItemClickEventArgs> Delete { get; set; }
}
